{
  "id": "copybook",
  "description": "Copybook validation schema",
  "required": [
    "name",
    "header",
    "body"
  ],
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 8,
      "maxLength": 8
    },
    "description": {
      "type": "string",
      "maxLength": 45
    },
    "author": {
      "type": "string",
      "maxLength": 45
    },
    "size": {
      "type": "number"
    },
    "header": {
      "required": [
        "name",
        "fields"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 20,
          "default": "HEADER"
        },
        "fields": {
          "type": "array",
          "items": {
            "required": [
              "name",
              "size",
              "type"
            ],
            "type": "object",
            "properties": {
              "filler": {
                "type": "boolean",
                "default": false
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 21
              },
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 34
              },
              "size": {
                "type": "number",
                "minimun": 1
              },
              "type": {
                "type": "string",
                "enum": [
                  "X",
                  "9"
                ]
              }
            }
          }
        }
      }
    },
    "body": {
      "type": "array",
      "items": {
        "required": [
          "redefines",
          "name",
          "fields"
        ],
        "redefines": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "size",
              "type",
              "inOut"
            ],
            "properties": {
              "filler": {
                "type": "boolean",
                "default": false
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 21
              },
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 34
              },
              "size": {
                "type": "number",
                "minimun": 1
              },
              "type": {
                "type": "string",
                "enum": [
                  "X",
                  "9"
                ]
              },
              "decimal": {
                "type": "number",
                "minimun": 1
              },
              "inOut": {
                "type": "string",
                "enum": [
                  "I",
                  "O"
                ]
              }
            }
          }
        }
      }
    },
    "trailer": {
      "type": "object",
      "properties": {
        "redefines": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "maxLength": 20
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filler": {
                "type": "boolean",
                "default": false
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 21
              },
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 34
              },
              "size": {
                "type": "number",
                "minimun": 1
              },
              "decimal": {
                "type": "number",
                "minimun": 1
              },
              "type": {
                "type": "string",
                "enum": [
                  "X",
                  "9"
                ]
              }
            }
          }
        }
      }
    }
  }
}